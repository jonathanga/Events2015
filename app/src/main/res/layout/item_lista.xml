<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center">

    <TextView
        android:textColor="@color/color_verde"
        android:id="@+id/itemLista_dia"
        android:text="1"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/itemLista_nombre"
            android:text="Nombre Evento"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_azul"/>
        <TextView
            android:id="@+id/itemLista_participa"
            android:textSize="18sp"
            android:text="Participantes"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_verde"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/itemLista_img"
        android:src="@drawable/sin_agendar"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp" />

</LinearLayout>